@using System.Web
@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("GetValue", "Home"))
{
    <h2>Create new employer</h2>


    <div class="container-fluid">
        <form>
            <div class="row border border-left-0 border-right-0">
                <div class="form-group col-md-4">
                    <label for="InputFamily" style="width:100%">Family</label>
                    <input type="text" id="InputFamily" name="InputFamily" placeholder="Family" style="width:100%" />
                </div>
                <div class="form-group col-md-4">
                    <label for="InputName" style="width:100%">Name</label>
                    <input type="text" id="InputName" name="InputName" placeholder="Name" style="width:100%" />
                </div>
                <div class="form-group col-md-4">
                    <label for="InputSurname" style="width:100%">Surname</label>
                    <input type="text" id="InputSurname" name="InputSurname" placeholder="Surname" style="width:100%" />
                </div>
            </div>
            <div class="row border border-left-0 border-right-0">
                <div class="form-group">
                    <label for="InputAddress" style="width:inherit">Address</label>
                    <input type="text" style="width:100%" id="InputAddress" name="InputAddress" placeholder="Address" />
                </div>
            </div>

            <div class="row border border-left-0 border-right-0">
                <div class="form-group">
                    <label for="genderCheck">Gender</label>
                    <div id="genderCheck">
                        <div class="form-check col-sm-2">
                            <input type="radio" class="form-check-input" id="g1" name="Gender" value="Man">
                            <label class="form-check-label" for="g1">Man</label>
                        </div>

                        <div class="form-check col-sm-2">
                            <input type="radio" class="form-check-input" id="g2" name="Gender" value="Woman" checked>
                            <label class="form-check-label" for="g2">Woman</label>
                        </div>
                    </div>

                </div>
            </div>

            <div class=" row border border-left-0 border-right-0">
                <div class="dropdown col-sm-6">
                    <label for="country" style="width:inherit">Citizenship</label>
                    <input class="btn btn-secondary dropdown-toggle" type="button" id="country" name="citizenship"  value="Russia" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                        Choose country

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </div>

                <div class="dropdown col-sm-6">
                    <label for="education" style="width:inherit">Education</label>
                    <input class="btn btn-secondary dropdown-toggle" type="button" id="educ" name="education" value="High" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                        Choose education

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </div>
            </div>

            <button class="btn btn-primary" type="submit">Submit</button>


        </form>
    </div>
}

